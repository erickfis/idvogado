#:import utils kivy.utils

<MainWindow>:
    BoxLayout:
        orientation: 'vertical'
        # padding: 20
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex('#ff2a2aff')
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: 'iAdogados'
            bold: True
            italic: True
            color: 1,1,1,1
            font_size: 40


        BoxLayout:
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#FFFFFF')
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: 'An android app meant to connect Employment Law Attorneys with workers in need.'
                valign: 'middle'
                halign: 'center'
                color: 0,0,0,1
                text_size: self.width-20, self.height-20

            Label:
                text: 'Built with love in Python.'
                italic: True
                valign: 'middle'
                halign: 'center'
                color: 0,0,0,1
                text_size: self.width-20, self.height-20


        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 10

            TextInput:
                hint_text: 'User name'
                id: user
                multiline: False


            TextInput:
                hint_text: 'password'
                id: password
                multiline: False

            Button:
                text: 'Login'
