#:import utils kivy.utils

<MainWindow>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex('#ff2a2aff')
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#F05F40')
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: 'iAdogados'
                bold: True
                italic: True
                color: 1,1,1,1
                font_size: 40


        Label:
            text: 'An android app meant to connect Employment Law Attorneys with workers in need. Built with love in Python.'
            italic: True
            valign: 'middle'
            halign: 'center'
            text_size: self.width-20, self.height-20


        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 10
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#F05F40')
                Rectangle:
                    size: self.size
                    pos: self.pos
            # size_hint_y: None
            # height: 80

            TextInput:
                hint_text: 'User name'
                id: user
                multiline: False


            TextInput:
                hint_text: 'password'
                id: password
                multiline: False

            Button:
                text: 'Entrar'
